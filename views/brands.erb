<h2>Current Shoe Brands:</h2>

<% if @brands.any?() %>

  <ul>
    <% @brands.each do |brand| %>
    <li><a href="/brands/<%= brand.id() %>"><%= brand.brand_name() %>, <%= brand.price() %> </a></li>
    <% end %>
  </ul>

<% else %>

  <p>There are no brands yet!</p>

<% end %>

<br>
<h5><a href="/brands/new"><em>Add a New Brand</em></a></h5>
