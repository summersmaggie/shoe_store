<h2>Store: <%= @store.store_name %> - <%= @store.location %></h2>

<h3>Current shoe brands available at this store:</h3>

<% if @store.brands.any? %>
  <ul>
    <% @store.brands.each do |brand| %>
      <li><%= brand.brand_name %></li>
    <% end %>
  </ul>
<% else %>
  <p>This store has no brands yet.</p>
<% end %>

<h3>Add a new brand to this store!</h3>

<form action="/stores/<%= @store.id() %>" method="post">
  <div class="form-group">
    <select name="brand_id">
      <% @available_brands.each do |brand| %>
        <option value="<%= brand.id %>"><%= brand.brand_name %></option>
      <% end %>
    </select>
  </div>
  <button type="submit" class="button btn-success">Add Brand to Store</button>
</form>
<br>
<h5><a href="/stores/<%= @store.id() %>/edit">Edit or Delete Store</h5></button>
